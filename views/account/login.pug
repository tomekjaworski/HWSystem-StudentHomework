extends ../includes/layout

mixin form
    form.form-signin(method='post', action='/login')
        h2.form-signin-heading Please sign in
        if redirect
            input(type='hidden', name='redirect', value=redirect)
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='' name='email')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
        .checkbox
            label
                input(type='checkbox', value='remember-me')
                |  Remember me
        if error
            input.btn.btn-lg.btn-danger.btn-block(type='submit' value='Sign in')
        else
            input.btn.btn-lg.btn-primary.btn-block(type='submit' value='Sign in')


block content
    if error
        .card.card-outline-danger
            .card-block
                div.alert.alert-danger(role='alert')
                    strong= error
                +form
    else
        .card
            .card-block
                +form

