extends ../includes/layout

mixin entry(id)
    tr
        th(scope='row')= id
        td Mark
        td Otto
        td @mdo

block content

    if (data !== undefined && data.message && (data.message.length > 0 ))
        .alert.alert-info(role='alert')
            strong Wiadomość:
            |  #{data.message}

    .row
        .col-md-12.col-lg-4#topics-column
            include topics
        .hidden-md-down.col-lg-8#tasks-column
            //-include tasks
            div.d-flex.justify-content-center
                .col-8
                    if data.taskView
                        script var taskView = #{data.taskView}
                    else
                        h2.text-center wybierz temat z bocznego menu aby przejsc do poszczególnych zadań
