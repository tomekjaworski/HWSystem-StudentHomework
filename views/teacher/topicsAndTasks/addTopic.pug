extends ../../includes/layout

block content
    if (message !== undefined && message && (message.length > 0 ))
        .alert.alert-danger(role='alert')
            strong Wiadomość:
            |  #{message}
    .row
        .col-md-12.col-lg-4
            include ../menu

        .col-md-12.col-lg-8
            .card
                .card-header.text-center
                    strong=title
                .card-block
                    form(method='post')
                        .form-group
                            label(for='number') Numer:
                            input.form-control#number(name='topicNumber', required, value=(param ? param('topicNumber') : ''))
                        .form-group
                            label(for='title') Tytuł:
                            br
                            input.form-control#title(name='topicTitle', required, value=(param ? param('topicTitle') : ''))
                        .form-group
                            label(for='dead') Termin oddania:
                            input.form-control#dead(name='topicDeadline', type='date', required, value=(param ? param('topicDeadline') : ''))


                        input.btn.btn-primary(type='submit', value='Dodaj')